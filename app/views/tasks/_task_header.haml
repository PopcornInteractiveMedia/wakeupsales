    $.ajax({
        type: "POST",
        url: "/task_tab_data",
        dataType: 'json',
        async: true,
        beforeSend: function(){
          $("#task_loader").show();
        },
        success: function(data)
        {
         
        },
        error: function(data) {
          $("#task_loader").hide();
        },
