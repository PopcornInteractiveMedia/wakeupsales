        type: "POST",
        url: "/task_listing",
        dataType: 'json',
        data: {task_status: task_status},
        async: true,
        beforeSend: function(){
          $("#task_loader").show();
        },
        success: function(data)
        {
         
        },
        error: function(data) {
          $("#task_loader").hide();
        },
        complete: function(data) {
          //alert(data.responseText)
          $("#task_list").html(data.responseText);
          $("#task_loader").hide();
          $("li").removeClass("active");
          $("#"+task_status+"Task").addClass("active")
          
