        $('#filter_task_type').val("#{cookies[:task_type_val]}");
        $(".tag_filter").show();
        $(".task_type_tag").show();
        $("#task_type_tag_txt").html("#{cookies[:task_type_text]}");
      }
     if("#{cookies[:asg_type_v]}" == "true" ){
