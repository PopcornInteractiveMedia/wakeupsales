%div
  %a.btn.btn-default.btn-lg{role: "button", href: "#{@task_url}"}
    %span.fnt27
      =@task_count
    %span
      =@task_text
  /%a{href: "/deals?type=working"}
  /  %span.btn.btn-app.btn-sm.btn-light.no-hover
  /    %span.line-height-1.bigger-170
  /      =@working_deals
  /    %span
  /      Working deals
  -if @current_user.is_admin?
    - ur = "/leads?type=incoming"
  -else
    - ur = "leads?assigned_to=#{current_user.id}"
  %a.btn.btn-default.btn-lg{role: "button", href: "#{ur}"}
    %span.fnt27
      =@new_deals
    %span
      New Leads
	  
      /= DealStatus.get_deal_name('1',@current_user.organization_id).name
  %a.btn.btn-default.btn-lg{role: "button",href: "/leads?type=qualify"}
    %span.fnt27
      =@qualified_deals
    %span 
      Qualified Leads
      /= DealStatus.get_deal_name('2',@current_organization.id).name

