:css
  .well{
    background-color: #F5F5F5;
    border: 1px solid #E3E3E3;
    border-radius: 4px;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset;
    margin-bottom: 20px;
    min-height: 20px;
    padding: 19px;
  }

= stylesheet_link_tag 'home'
%br/
%br/
%br/

.well.col-md-4.col-md-offset-4

  %legend Change your password
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group      
      = f.password_field :password, :required => true, :class=>"form-control", :placeholder=>"Password", :style=>"height:50px;font-size: 17px;"
    .form-group
      = f.password_field :password_confirmation, :required => true, :class=>"form-control", :placeholder=>"Confirm new password", :style=>"height:50px;font-size: 17px;"
    .form-group
      = f.submit "Change my password", :class=>"btn btn-primary", :style=>"height:50px;font-size: 17px;"
.cb
