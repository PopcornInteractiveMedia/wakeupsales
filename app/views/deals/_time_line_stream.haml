  function delete_activity_note(id)
  {
    var answer = confirm('Are you sure you want to delete this?');
    if (answer)
    {
      
      $.ajax( {
          type: "POST",
          url: "/hide_note" ,
          data: {id: id},
          success: function(result) {
            $(".note_"+id).wrap("<strike>");
            $("#edit_note_"+id).hide();
          }
        });
    }
    else
    {
      
      console.log('cancel');
    }
    
  }

