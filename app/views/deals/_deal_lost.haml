  function lost_chk_box(){
    var $cbs = $('input[name="active_lost_label_menu"]');
    var total = 0;
    $cbs.each(function() {
        if (this.checked){
            total ++;
        }
    });
    if(total > 0){
      $("#lostLabel").removeClass("label_arrow")
      $("#lostLabel").addClass("label_arrow_active")
      $("#lostDropdown").attr("data-toggle", "dropdown")
    }else{
      $("#lostLabel").addClass("label_arrow")
      $("#lostLabel").removeClass("label_arrow_active")
      $("#lostDropdown").removeAttr("data-toggle", "dropdown");
      $(".DataTables_sort_wrapper").removeClass("open")
    }
  var checkboxes = document.getElementsByName('active_lost_label_menu');
  var vals = "";
  for (var i=0, n=checkboxes.length;i<n;i++) {
   if (checkboxes[i].checked) 
   {
    vals += checkboxes[i].value+ ","
   }
  }
  $("#mass_deal_ids").val(vals);
  $("#deal_ids_to_delete").val(vals);
